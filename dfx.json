			"type": "motoko",
			"main": "src/gateway/actors/Gateway.mo"
		},
		"portal_database": {
			"type": "motoko",
			"main": "src/portal_database/actors/PortalDatabase.mo"
		},
		"post_database": {
			"type": "motoko",
			"main": "src/post_database/actors/PostDatabase.mo"
		},
        "blotch_frontend": {
            "dependencies": [
                "gateway",
                "portal_database",
                "post_database"
            ],
            "frontend": {
